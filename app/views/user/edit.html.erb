<h2>修改我的资料</h2>

<%= form_for @user, :url =>{:controller => :user, :action => :update, :id=>@user.id},:html=>{:id=>"edit_user_form", :autocomplete=>"off"} do |f| %>
  <%= render :partial => "form", :object => f %>
  <%= f.submit "修改",:disable_with=>"修改中..." %>
<% end %>

<script type="text/javascript">
  $("#edit_user_form").validationEngine();
</script>
