<h2>回复私信</h2>

<%= form_for @message, :url => send_reply_messages_url,:html => { :id=>"message_form", :method=>:post} do |f| %>
<fieldset>
<%= f.label :内容 %>
<%= f.text_area :content,:class=>"validate[required]" %>
<%= f.hidden_field :reply_to_id,:value=>params[:message_id] %>
</fieldset>

  <%= f.submit "发送" %>
<% end %>
<script type="text/javascript">
  $("#message_form").validationEngine();
</script>

