<fieldset>
<%= form.label :你的目标 %>
<%= form.text_field :name,:class=>"validate[required,minSize[4]]" %>
</fieldset>
<fieldset>
<%= form.label :目标内容 %>
<%= form.text_area :description,:class=>"validate[required,minSize[50]]" %>
</fieldset>
<fieldset>
<%= form.label :目标期限 %>
<%= form.date_select :complete_time,:class=>"validate[required,future[now]" %>
</fieldset>
<fieldset>
<%= form.label :选个类别吧 %>
<% Category.all.each_with_index do |category, index| %>
  <% if (index == 0) %>
    <%= form.radio_button :category_id,category.id,{:checked=>true} %><%= category.name %>
  <% elsif ((index+1)%4 == 0) %>
      <%= form.radio_button :category_id,category.id %> <%= category.name %><br/>
   <% else %>
      <%= form.radio_button :category_id,category.id %> <%= category.name %>
   <% end %>
<% end %>
</fieldset>
<% (1..4).each do|i| %>
<fieldset>
<%= label 'reward_conditions',"#{i}", "犒赏条件 #{i}" %>
<%= text_field 'reward_conditions',"#{i}",:class=>"validate[minSize[8]]" %>
</fieldset>
<fieldset>
<%= label 'rewards',"#{i}", :犒赏内容 %>
<%= text_area 'rewards', "#{i}",:class=>"validate[minSize[10]]" %>
</fieldset>
<% end %>
<%= link_to_function("需要更多犒赏来鼓励自己？","$('.more_rewards').slideToggle('slow')") %>
<% (5..8).each do|j| %>
<fieldset class="more_rewards" style="display:none;">
<%= label 'reward_conditions',"#{j}", "犒赏条件 #{j}"%>
<%= text_field 'reward_conditions',"#{j}",:class=>"validate[minSize[8]]" %>
</fieldset>
<fieldset class="more_rewards" style="display:none;">
<%= label 'rewards',"#{j}", :犒赏内容 %>
<%= text_area 'rewards', "#{j}",:class=>"validate[minSize[10]]" %>
</fieldset>
<% end %>
<fieldset>
<%= form.label :上传个目标图片吧 %>
<%= form.file_field :avatar,:value=>"上传" %>
</fieldset>