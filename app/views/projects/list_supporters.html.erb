<div id="breadcrumb">
    <ul>
    	<li><%= link_to "网站主页", root_url%></li>
        <li><%= link_to @project.category.name, projects_url(:category=>@project.category.name) %></li>
    </ul>
</div><!-- end of breadcrumb-->

<div class="grid_5 alpha" id="project-title">
			<h2><%= @project.name%></h2>
</div>
<div class="grid_2 omega" id="follow-project">
       		<div class="button">
            	&nbsp;
            </div>
       </div>

   <div class="grid_5 alpha" id="project-navigation">
        	<ul>
            	<li><%= link_to "目标主页", project_url(@project.id) %></li>
                <li><%= link_to "进展(" + "#{@project.project_updates.size}" + ")",project_updates_url %></li>
                <li><%= link_to "留言(" + "#{@project.comments.size}" + ")",comments_url %></li>
                <li><%= link_to "支持者(" + "#{@project.supporters.count}" + ")",list_supporters_projects_url, :class=>"currentNavigationalItem" %></li>
            </ul>
   </div>

        <div class="grid_2 omega" id="project-meta-detail">
        	<ul class="project-meta">
            	<li><%= link_to @project.owner.name, user_url(@project.user_id) %></li>
                <li><%= link_to @project.owner.location,projects_url(:location=>@project.owner.location) %></li>
            </ul>
        </div>
        <div class="clear"></div>

<table width="100%" border="0" summary="你所创建的目标" class="myTable">
  <% @project.supporters.each do |supporter| %>
  <tr>
    <td class="td-titles"><%=link_to supporter.name, user_url(supporter.id) %></td>
    <td><%= supporter.location %></td>
    <% if supporter.support_projects.count > 0 %>
    <td><%= supporter.name %> 还支持了其他<%=link_to " #{supporter.support_projects.count} ", projects_url(:support_by=>supporter.id) %>个目标</td>
    <% else %>
    <td> </td>
    <% end %>
  </tr>
  <% end %>
</table>
