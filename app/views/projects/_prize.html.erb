<span id="reward">
<fieldset>
<%= label 'reward_conditions','', "犒赏条件" %>
<%= text_field 'reward_conditions','',:class=>"validate[minSize[8],maxSize[16]]", :onfocus=>"$(this).validationEngine('showPrompt', '例如：如果我10天不吸烟', 'pass','topRight',true)" %>
</fieldset>
<fieldset>
<%= label 'rewards',"", "犒赏内容" %>
<%= text_area 'rewards', "",:class=>"validate[minSize[10]]",:onfocus=>"$(this).validationEngine('showPrompt', '例如：给我女儿每一个玩具', 'pass','topRight',true)" %>
</fieldset>
</span>
