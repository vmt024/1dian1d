<div id="project-updates">
       <% @project_updates.each do |pu|%> 	
        	<div class="entry">
        	<p><%= pu.content%></p>
                <h6>更新于<%= time_ago_in_words(pu.updated_at)%>前</h6>
            </div>
            <% end %>
 </div>
<% if @project.owner.id.eql?(session[:current_user_id])%>       
<%= form_for(@new_project_update) do |f| %>
  <%= f.text_area :content %>
  <%= f.submit '更新', :disable_with=>"更新中..." %>
<% end %>
<% end %>
